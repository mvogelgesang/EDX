---
import { AstroConfig } from "astro";
import astroConfig from "../../astro.config.mjs";
import Header from "../components/Header.astro";


export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
const base:string = astroConfig.base ? astroConfig.base : ''
---

<!DOCTYPE html>
<html lang="en" class="height-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href={`${base}/vendor/uswds/css/uswds.min.css`} />
    <!-- TODO: Fix script tag formatting -->
    <script is:inline src={`${base}vendor/uswds/js/uswds-init.min.js`}>

    </script>
    <title>{title}</title>
  </head>
  <body class="height-full display-flex flex-column">
    <a class="usa-skipnav" href="#main-content">Skip to main content</a>
    <Header />

    <!-- bottom padding removed for iframe to extend to bottom of viewport -->
    <main id="main-content" class="usa-section height-full padding-bottom-0">
      <div class="grid-container height-full display-flex flex-column">
        <slot></slot>
      </div>
    </main>

    <!-- TODO: Fix script tag formatting -->
    <script is:inline src={`${base}vendor/uswds/js/uswds.min.js`}>

    </script>
  </body>
</html>
